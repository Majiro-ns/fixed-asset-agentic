FROM python:3.11-slim

WORKDIR /app

# Copy requirements and install dependencies (layer cache optimization)
COPY requirements-ui.txt .
RUN pip install --no-cache-dir -r requirements-ui.txt

# Copy UI code and demo data
COPY ui/ ./ui/
COPY data/demo/ ./data/demo/
COPY data/demo_pdf/ ./data/demo_pdf/

# Non-root user for security
RUN addgroup --system appgroup && adduser --system --ingroup appgroup --home /home/appuser appuser \
    && mkdir -p /home/appuser/.streamlit && chown -R appuser:appgroup /home/appuser
ENV HOME=/home/appuser
USER appuser

# Expose port (Cloud Run will set PORT env var)
ENV PORT=8080

# Streamlit config for Cloud Run
ENV STREAMLIT_SERVER_PORT=${PORT}
ENV STREAMLIT_SERVER_ADDRESS=0.0.0.0
ENV STREAMLIT_SERVER_HEADLESS=true
ENV STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Run Streamlit
CMD ["sh", "-c", "exec streamlit run ui/app_minimal.py --server.port=${PORT:-8080} --server.address=0.0.0.0 --server.headless=true"]
